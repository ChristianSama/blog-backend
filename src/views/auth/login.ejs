<%- include("../partials/top"); %>

<form action="/auth/login" method="post">
  <div class="d-flex flex-column justify-content-center" style="width: 30rem; margin: 0 auto;">
    <h1 class="mb-4">Login</h1>
    <label class="form-label mb-4">
      Email:
      <input type="email" name="email" class="form-control">
    </label>
    <label class="form-label mb-4">
      Password:
      <input type="password" name="password" class="form-control">
    </label>
    <button type="submit" class="btn btn-secondary mb-4">Login</button>
    <div>Not registered? <a href="/auth/signup">Create an account</a></div>
  </div>
</form>

<%- include("../partials/bottom"); %>